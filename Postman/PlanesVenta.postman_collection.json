{
	"info": {
		"name": "MediSupply - Planes de Venta",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{"key": "baseUrl", "value": "http://localhost:8002"},
		{"key": "plan_id", "value": ""}
	],
	"item": [
		{
			"name": "Listar Planes",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test('Status 200', () => pm.response.to.have.status(200));",
						"pm.test('Response is array', () => pm.expect(pm.response.json()).to.be.an('array'));",
						"pm.test('Valid types', () => {",
						"    pm.response.json().forEach(p => {",
						"        pm.expect(p.id).to.be.a('number');",
						"        pm.expect(p.vendedor_id).to.be.a('number');",
						"        pm.expect(p.periodo).to.be.a('string');",
						"        pm.expect(p.anio).to.be.a('number');",
						"        pm.expect(p.pais).to.be.a('number');",
						"        pm.expect(p.productos_objetivo).to.be.an('array');",
						"        pm.expect(p.estado).to.be.a('string');",
						"        if (p.meta_monetaria_usd) pm.expect(p.meta_monetaria_usd).to.be.a('number');",
						"    });",
						"});"
					]
				}
			}],
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/api/v1/planes-venta?skip=0&limit=100",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "planes-venta"],
					"query": [{"key": "skip", "value": "0"}, {"key": "limit", "value": "100"}]
				}
			}
		},
		{
			"name": "Crear Plan",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test('Status 201', () => pm.response.to.have.status(201));",
						"const r = pm.response.json();",
						"pm.test('Valid response', () => {",
						"    pm.expect(r.id).to.be.a('number');",
						"    pm.expect(r.vendedor_id).to.be.a('number');",
						"    pm.expect(r.periodo).to.be.a('string');",
						"    pm.expect(r.anio).to.be.a('number');",
						"    pm.expect(r.pais).to.be.a('number');",
						"    pm.expect(r.productos_objetivo).to.be.an('array');",
						"    pm.expect(r.estado).to.be.a('string');",
						"});",
						"pm.collectionVariables.set('plan_id', r.id);"
					]
				}
			}],
			"request": {
				"method": "POST",
				"header": [{"key": "Content-Type", "value": "application/json"}],
				"body": {
					"mode": "raw",
					"raw": "{\"vendedor_id\":1,\"periodo\":\"Q1\",\"anio\":2024,\"pais\":1,\"productos_objetivo\":[1],\"meta_monetaria_usd\":50000}"
				},
				"url": "{{baseUrl}}/api/v1/planes-venta"
			}
		},
		{
			"name": "Obtener Plan",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test('Status 200', () => pm.response.to.have.status(200));",
						"const r = pm.response.json();",
						"pm.test('Valid types', () => {",
						"    pm.expect(r.id).to.be.a('number');",
						"    pm.expect(r.vendedor_id).to.be.a('number');",
						"    pm.expect(r.periodo).to.be.a('string');",
						"    pm.expect(r.productos_objetivo).to.be.an('array');",
						"});"
					]
				}
			}],
			"request": {"method": "GET", "url": "{{baseUrl}}/api/v1/planes-venta/{{plan_id}}"}
		},
		{
			"name": "Eliminar Plan",
			"event": [{
				"listen": "test",
				"script": {"exec": ["pm.test('Status 204', () => pm.response.to.have.status(204));"]}
			}],
			"request": {"method": "DELETE", "url": "{{baseUrl}}/api/v1/planes-venta/{{plan_id}}"}
		}
	]
}
